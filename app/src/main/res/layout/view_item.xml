<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="500dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_actions_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item"
        android:text="84,000 Buddhas Statue Donation"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_black"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_actions_count"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="none"
        android:maxLines="3"
        android:text="The Great King Ashoka, who built 84,000 stupas, the gagan malik foundation wants to revive Buddhism in India, which was started by Bhodhisattva Dr B R Ambedkar in 1956" />

</androidx.constraintlayout.widget.ConstraintLayout>