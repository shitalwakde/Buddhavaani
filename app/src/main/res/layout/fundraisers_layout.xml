<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/movieImage"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/buddha"/>

        <TextView
            android:id="@+id/movieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieImage"
            android:text="My little boy's cancer has replaced twice but i'm helpless. Please save."
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_img_by"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="FF"
            android:textColor="@color/teal_200"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:background="@drawable/round_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieName"/>

        <TextView
            android:id="@+id/txt_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Family Friends"
            android:padding="5dp"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toEndOf="@+id/txt_img_by"
            app:layout_constraintTop_toBottomOf="@id/movieName"/>
        <TextView
            android:id="@+id/txt_raise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/black"
            android:inputType="none"
            android:maxLines="1"
            android:textSize="16dp"
            android:text="\u20B9 4,47,70,489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_by" />
        <TextView
            android:id="@+id/txt_raise_out_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="raised out of"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintStart_toEndOf="@+id/txt_raise"
            app:layout_constraintTop_toBottomOf="@+id/txt_by"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="65"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieName"/>

        <TextView
            android:id="@+id/txt_out_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="\u20B9 5,00,00,000"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_raise"/>
        <LinearLayout
            android:id="@+id/ll_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_out_of">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_watch"
                android:drawablePadding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days Left"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_out_of">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23976"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_like"
                android:drawablePadding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supporters"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_donate"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/donate"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:layout_margin="10dp"
            android:background="@drawable/donate_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_like"/>
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_like"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>